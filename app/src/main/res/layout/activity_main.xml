<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3BBC1"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Ajouter des dépenses aux projets"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:onClick="toExpenseClick"
            android:text="Suivant"
            android:backgroundTint="#FFC107"
            android:textColor="#3F51B5" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Débiter les comptes bancaires"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#3F51B5"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:onClick="toAccountClick"
            android:text="Suivant"
            android:backgroundTint="#FFC107"
            android:textColor="#3F51B5"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ajouter une convention"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#3F51B5"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:onClick="toConventionClick"
            android:text="Suivant"
            android:backgroundTint="#FFC107"
            android:textColor="#3F51B5"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Suivre l’échéancier des chèques et leurs paiements"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#3F51B5"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:onClick="toDeadlineClick"
            android:text="Suivant"
            android:textSize="16dp"
            android:backgroundTint="#FFC107"
            android:textColor="#3F51B5"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>